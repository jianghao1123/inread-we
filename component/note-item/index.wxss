.quotation-l{
  margin-top: 36rpx;
}
.quotation-r{
  align-self: flex-end;
}
.toggle{
  font-size: 30rpx;
  font-weight: bold;
  align-self: flex-end;
  margin-top: 24rpx;
}
.author{
  font-size: 28rpx;
  flex: 1;
  font-weight: bold;
}
.operation{
  display: inline-flex;
  flex-flow: row;
  width: 100%;
  margin-top: 24rpx;
  align-items: center;
}
.icon-comment{
  margin-left: 42rpx;
  font-size: 46rpx;
}

.icon-like{
  margin-left: 42rpx;
  font-size: 46rpx;
}
.icon-share{
  font-size: 46rpx;
}
.count{
  font-size: 24rpx;
  margin-left: 6rpx;
  color: #666;
  align-self: flex-start;
}
.follow{
  font-size: 24rpx;
  margin-left: 6rpx;
  font-weight: bold;
  align-self: flex-start;
}
.conmment-layout{
  background: #EFEFEF;
  margin-top: 36rpx;
  overflow: hidden;
  border-radius: 18rpx;
  padding: 18rpx 18rpx;
}