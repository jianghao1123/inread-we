/* component/note-item/index.wxss */
@import "../icon/index.wxss";

.container {
    display: flex;
    flex-direction: column;
    padding: 46rpx 46rpx;
}
.date{
  color: #999;
  font-size: 28rpx;
  margin-left: 8rpx;
}
.title {
    font-size: 64rpx;
    font-family: PingFangSC-Thin, sans-serif;
    margin-top: 18rpx;
}
.picture{
  margin-top: 36rpx;
  width: 100%;
  height: 300rpx;
  border-radius: 4px;
}
.content{
  font-size: 30rpx;
  font-family: PingFangSC-Ultralight, sans-serif;
  padding: 14rpx 0;
  line-height: 48rpx;
  /* display: -webkit-box;
  overflow: hidden;
