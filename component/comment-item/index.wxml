<!--component/comment-item/index.wxml-->
<view class="comment-item-layout">
    <user-avatar username="{{username}}"
        avatar="{{avatar}}"
        date="{{date}}"></user-avatar>
    <view class="comment-content-layout">
        <view class="comment-content">{{content}}</view>
        <view class="comment-replay" wx:if="{{replyItems && replyItems.length > 0}}">
            <comment-reply-item wx:for="{{replyItems}}" wx:key="{{index}}" 
        user="{{item.fromUser ? item.fromUser.username : 'æœªçŸ¥'}}"
        comment="{{item.content}}">
            </comment-reply-item>
        </view>
    </view>
</view>
